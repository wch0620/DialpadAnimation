<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快" />

        <Button
            android:id="@+id/slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="慢" />
    </LinearLayout>

    <com.example.animation.widget.DialPadAnimLayout
        android:id="@+id/circularButton0"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cornerRadius="48dp" >

        <ImageView
            android:id="@+id/icon0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/people_dialpad_hide_status"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialpad_singlecall_btn" />
    </com.example.animation.widget.DialPadAnimLayout>

    <com.example.animation.widget.DialPadAnimLayout
        android:id="@+id/circularButton1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cornerRadius="48dp"
        app:dial_background="@drawable/people_dialpad_bottom_bg" >

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/people_dialpad_hide_status"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_card_left1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_left_call_button" />

            <TextView
                android:id="@+id/left_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/left_image1"
                android:text="卡1"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_card_left1"
            android:background="#ffffff" />

        <RelativeLayout
            android:id="@+id/layout_card_right1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line1" >

            <ImageView
                android:id="@+id/right_image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_right_call_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/right_image1"
                android:text="卡2"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </com.example.animation.widget.DialPadAnimLayout>

    <com.example.animation.widget.DialPadAnimLayout
        android:id="@+id/circularButton2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cornerRadius="48dp" >

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/people_dialpad_hide_status"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_card_left2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_left_call_button" />

            <TextView
                android:id="@+id/left_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/left_image2"
                android:text="卡1"
                android:textColor="#ffffff" />

            <View
                android:id="@+id/line2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_card_video2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_card_left2"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/video_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dialpad_video_button" />

            <TextView
                android:id="@+id/video_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textColor="#ffffff" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_card_right2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_card_video2" >

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/right_image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_right_call_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/right_image2"
                android:text="卡2"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </com.example.animation.widget.DialPadAnimLayout>

    <com.example.animation.widget.DialPadAnimLayout
        android:id="@+id/circularButton3"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/cpb_white"
        android:textSize="18sp"
        app:cornerRadius="48dp" >

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/people_dialpad_hide_status"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_card_left3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/left_image3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_left_call_button" />

            <TextView
                android:id="@+id/left_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/left_image3"
                android:text="卡1"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_video3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_card_left3"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/video_btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dialpad_video_button" />

            <TextView
                android:id="@+id/video_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textColor="#ffffff" />
        </LinearLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_video3"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/layout_card_multi3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/line3"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/multi_btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/dialpad_conference_button" />

            <TextView
                android:id="@+id/multi_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多人"
                android:textColor="#ffffff" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_card_right3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_card_multi3" >

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/right_image3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:src="@drawable/people_dialpad_animation_right_call_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/right_image3"
                android:text="卡2"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </com.example.animation.widget.DialPadAnimLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:autoLink="web"
        android:layout_marginTop="50dp"
        android:text="github.com/wch0620"
        />

</LinearLayout>